---
export interface Props {
  title: string;
  icon?: string;
  id?: string;
}

const { title, icon, id } = Astro.props;
---

<section class="mb-8" id={id}>
  <div class="mb-4">
    <div class="flex items-center gap-2 mb-2">
      {icon && <div class="w-6 h-6 text-blue-600" set:html={icon} />}
      <h3 class="text-2xl font-bold text-gray-900">{title}</h3>
    </div>
    <hr class="border-t-2 border-blue-600" />
  </div>
  <div class="space-y-4">
    <slot />
  </div>
</section>
