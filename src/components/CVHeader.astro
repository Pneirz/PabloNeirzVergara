---
export interface Props {
  name: string;
  title: string;
  email: string;
  phone: string;
  location?: string;
  linkedin?: string;
  github?: string;
  website?: string;
  diplomas?: string;
}

const {
  name,
  title,
  email,
  phone,
  location,
  linkedin,
  github,
  website,
  diplomas,
} = Astro.props;
---

<header class="text-center mb-8" style="padding: 2rem; border-radius: 0.5rem;">
  <h1 class="text-4xl font-bold text-gray-900 mb-2">{name}</h1>
  <h2 class="text-xl text-gray-600 mb-4">{title}</h2>

  <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-600">
    <div class="flex items-center gap-1">
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path
          d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
        ></path>
        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
        ></path>
      </svg>
      <span>{email}</span>
    </div>

    <div class="flex items-center gap-1">
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path
          d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
        ></path>
      </svg>
      <span>{phone}</span>
    </div>

    {
      location && (
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
              clip-rule="evenodd"
            />
          </svg>
          <span>{location}</span>
        </div>
      )
    }
  </div>

  {
    (linkedin || github || website || diplomas) && (
      <div class="flex justify-center gap-4 mt-4">
        {linkedin && (
          <a
            href={linkedin}
            class="text-blue-600 hover:text-blue-800 transition-colors text-sm"
          >
            LinkedIn
          </a>
        )}
        {github && (
          <a
            href={github}
            class="text-gray-700 hover:text-gray-900 transition-colors text-sm"
          >
            GitHub
          </a>
        )}
        {website && (
          <a
            href={website}
            class="text-green-600 hover:text-green-800 transition-colors text-sm"
          >
            Website
          </a>
        )}
        {diplomas && (
          <a
            href={diplomas}
            class="text-purple-600 hover:text-purple-800 transition-colors text-sm"
          >
            Diplomas
          </a>
        )}
      </div>
    )
  }
</header>
